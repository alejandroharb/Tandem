				<div id="user-name" value="{{info.basicInfo.user_name}}"></div>

				<!-- =============COLLAPSIBLE POPOUT===holds individual collapsibles============= -->
				<ul class="collapsible popout" data-collapsible="accordion">

					{{#each info.basicInfo.Crafts}}
						<li>
							<div id="{{this.craft}}Collapsible" class="collapsible-header getChartData active" data-activity="{{this.craft}}" data-user= {{info.basicInfo.user_name}} value="{{this.craft}}"><i class="material-icons">insert_chart</i><span class="fontCollapsible">{{this.craft}}</span>{{!--<span class="fontGrowth">Score Growth: &nbsp;<span class="golfTotalScore"></span></span>--}}
							</div>

							<!-- =======BODY for CHART======= -->
							<div class="collapsible-body chartDiv {{this.craft}}ChartDiv">
								<canvas class="{{this.craft}}Chart {{this.craft}}Canvas" height="300" width="580"></canvas>
							</div>
						</li>
					{{/each}}

				</ul>
			</div>
		</div>
	</div>
</div>
