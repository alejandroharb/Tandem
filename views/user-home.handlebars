		<div class="container">
			<div class="row">
				<div class="col s12">
					<h4 class="center-align">Your Matches</h4>
					<hr>
					<div class="row">
						<div class="col s12 m6">
							<ul class="collection" id="matchContentInsert"></ul>
						</div>
						<div class="col s12 m6">
							<div id="yelpContent">

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
